{
  "name": "typescript-scaffold",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-frontend": "esbuild frontend/App.tsx --bundle --target=chrome58 --outfile=dist/out.js && cp frontend/index.html dist/index.html",
    "build-backend": "esbuild backend/server.ts --bundle --platform=node --target=node14 --outfile=dist/server.js",
    "build": "npm run build-frontend && npm run build-backend",
    "run-frontend": "serve dist",
    "run-backend": "node dist/server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "esbuild": "^0.14.9",
    "serve": "^13.0.2"
  }
}
